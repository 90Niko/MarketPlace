<div class="col-md-4">
    <div class="card mb-3 product-card">

        <article class="card-body text-center">
            <h5 class="card-title mt-3">@Model.Name</h5>

            <img class="card-img-top mx-auto d-block product-image" src="@Model.Image" alt="Image of @Model.Name">

            <ul class="list-unstyled mt-3 product-details">
                <li class="mb-1">
                    <span class="fw-bold">Added on: </span>@Model.CreatedOn
                </li>
                <li class="mb-1">
                    <span class="fw-bold">Category: </span>@Model.Category
                </li>
                <li class="mb-1">
                    <span class="fw-bold">Price: </span>@Model.Price Euro
                </li>
                <li class="mb-1">
                    <span class="fw-bold">Seller: </span>@Model.Seller
                </li>
                <li class="mb-1">
                    <span class="fw-bold">Quantity: </span>@Model.Quantity
                </li>
                <li class="mb-1">
                    <span class="fw-bold">Rating: </span>@Model.Rating
                </li>
            </ul>
        </article>

        <div class="card-footer text-center">
            @if (User.Identity.Name == Model.Seller)
            {
                <a asp-controller="Product" asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-dark mb-2 w-100 fw-bold">Edit</a>
                <a asp-controller="Product" asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-outline-danger mb-3 w-100 fw-bold">Delete</a>
            }
            else
            {
                <a asp-controller="Cart" asp-action="AddToCart" asp-route-id="@Model.Id" class="btn btn-outline-success mb-2 w-100 fw-bold">Add to Cart</a>
                <a asp-controller="Product" asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-primary mb-3 w-100 fw-bold">Details</a>
            }
        </div>
    </div>
</div>

