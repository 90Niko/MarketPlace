@using static MarketPlace.Extensions.ClaimPrincipalExtensions

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] -Best MarketPlace</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MarketPlace.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/UserArea/Mine/Mine.css" asp-append-version="true" />

    <link rel="icon" type="image/x-icon" href="assets/favicon.ico" />
    
</head>
<body style="background-color:powderblue; margin:0 auto;">
    <header style="background-color:#f8f9fa;">
        <nav class="navbar navbar-expand-sm bg-info navbar-dark shadow-sm">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Marketplace</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        @if (this.User?.Identity?.IsAuthenticated ?? false)
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Product" asp-action="Mine">My Products</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Product" asp-action="Add">Add Product</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Cart" asp-action="AddAddress">Shipping Address</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Order" asp-action="OrderInfo">Order Info</a>
                            </li>
                        }
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Product" asp-action="All">All Products</a>
                        </li>
                        @if (User?.IsInRole("Administrator") ?? false)
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="Admin" asp-controller="Home" asp-action="Dashboard">Admin Area</a>
                            </li>
                        }
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted py-3">
        <div class="container text-center">
            <a>&copy; @DateTime.Now.Year - Marketplace</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="js/scripts.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

<style>
    /* Navbar Styles */
    .navbar {
        padding: 10px 20px; /* Add padding for a more spacious look */
        margin-bottom: 20px; /* Add space between navbar and content */
    }

    .navbar-brand {
        font-size: 1.8rem; /* Larger brand font for emphasis */
        font-weight: bold; /* Bold brand name */
    }

    .navbar-nav .nav-item {
        margin: 0 10px; /* Add spacing between nav items */
    }

    .navbar-nav .nav-link {
        color: white; /* Default text color white for better contrast */
        font-size: 1.1rem; /* Slightly larger font size */
        padding: 10px 15px; /* Padding for clickable area */
        border-radius: 5px; /* Rounded corners */
        transition: background-color 0.3s ease, color 0.3s ease; /* Smooth transitions */
    }

    /* Hover effect for links */
    .navbar-nav .nav-link:hover {
        color: white; /* Change text color on hover */
        background-color: rgba(255, 255, 255, 0.2); /* Subtle background change */
    }

    /* Active link styles */
    .navbar-nav .nav-link.active {
        background-color: rgba(255, 255, 255, 0.3); /* Highlight active link */
        color: white; /* Ensure active link text is white */
    }

</style>
